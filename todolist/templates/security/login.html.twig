{% extends 'base.html.twig' %}

{% block body %}
	<div class="d-flex justify-content-center">
		{% if error %}
			<div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('login') }}" method="post" class="col-12 col-md-6 d-flex flex-column gap-2">
			<div class="form-group">
				<label for="username">Nom d'utilisateur :</label>
				<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" required/>
			</div>

			<div class="form-group">
				<label for="password">Mot de passe :</label>
				<input type="password" id="password" name="_password" class="form-control" required/>
			</div>

			<button class="btn btn-success align-self-center" type="submit">Se connecter</button>
		</form>
	</div>
{% endblock %}
