{% extends 'base.html.twig' %}

{% block body %}
	<div class="row">
		{{ form_start(form, {'attr': {'class': 'col-12'}}) }}

		<div class="mb-1">
			{{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.title, {'attr': {'class': 'invalid-feedback d-block'}}) }}
		</div>

		<div class="mb-1">
			{{ form_label(form.content, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '1'}}) }}
			{{ form_errors(form.content, {'attr': {'class': 'invalid-feedback d-block'}}) }}
		</div>

		<div class="mb-1">
			{{ form_label(form.is_done, null, {'label_attr': {'class': 'form-label d-block'}}) }}
			<div class="btn-group" role="group">
				{% for child in form.is_done %}
					<div class="form-check form-check-inline">
						{{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
						{{ form_label(child, null, {'label_attr': {'class': 'form-check-label'}}) }}
					</div>
				{% endfor %}
			</div>
			{{ form_errors(form.is_done, {'attr': {'class': 'invalid-feedback d-block'}}) }}
		</div>

		{% if form.created_at is defined %}
			{{ form_widget(form.created_at) }}
		{% endif %}

		{{ form_row(form._token) }}

		<div class="d-flex justify-content-between align-items-center mt-4">
			<a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
			<button type="submit" class="btn btn-success">Modifier</button>
		</div>

		{{ form_end(form, {'render_rest': false}) }}
	</div>
{% endblock %}
