{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Modifier
		<strong>{{ user.username }}</strong>
	</h1>
{% endblock %}
{% block header_img %}{% endblock %}

{% block body %}
	<div class="row">
		{{ form_start(form, {'action' : path('user_edit', {'id' : user.id})}) }}

		<div class="mb-3">
			{{ form_label(form.username, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.username, {'attr': {'class': 'invalid-feedback d-block'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.email, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.email, {'attr': {'class': 'invalid-feedback d-block'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.password.first, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.password.first, {'attr': {'class': 'invalid-feedback d-block'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.password.second, 'Répétez le mot de passe', {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
			{{ form_errors(form.password.second, {'attr': {'class': 'invalid-feedback d-block'}}) }}
			{{ form_errors(form.password, {'attr': {'class': 'invalid-feedback d-block'}}) }}
		</div>

		<div class="mb-3">
			{{ form_label(form.role, null, {'label_attr': {'class': 'form-label'}}) }}
			{{ form_widget(form.role, {'attr': {'class': 'form-select'}}) }}
			{{ form_errors(form.role, {'attr': {'class': 'invalid-feedback d-block'}}) }}
		</div>

		{{ form_row(form._token) }}

		<div class="text-end mt-4 mb-3">
			<button type="submit" class="btn btn-success">Modifier</button>
		</div>

		{{ form_end(form, {'render_rest': false}) }}
	</div>
{% endblock %}
